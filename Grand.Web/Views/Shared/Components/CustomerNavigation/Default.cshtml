            {
                <li class="customer-forum">
                    <a href="@Url.RouteUrl("CustomerForumSubscriptions")" class="@if (Model.SelectedTab == CustomerNavigationEnum.ForumSubscriptions)
                                                                                 {<text>active</text>}
                                                                                 else
                                                                                 {<text>inactive</text>}"><span class="material-icons">forum</span><span>@T("Account.ForumSubscriptions")</span></a>
                                                                            </li>
                                                                        }
            @if (Model.ShowVendorInfo)
            {
                <li class="customer-vendor">
                    <a href="@Url.RouteUrl("CustomerVendorInfo")" class="@if(Model.SelectedTab == CustomerNavigationEnum.VendorInfo)
                                                                     {<text>active</text>}
                                                                     else
                                                                     {<text>inactive</text>}"><span class="material-icons">supervisor_account</span><span>@T("Account.VendorInfo")</span></a>
                                                                </li>
                                                            }
            @await Component.InvokeAsync("Widget", new { widgetZone = "account_navigation_after" })
        </ul>
</div>